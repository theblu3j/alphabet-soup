# Maintainer: https://github.com/theblu3j

pkgname=rate-all
pkgver=0.3
pkgrel=1
pkgdesc='Bash script to rate mirrors.'
arch=('x86_64')
url='https://github.com/theblu3j/rate-all'
license=('GPL3')
depends=('bash' 'rate-mirrors')
source=("https://raw.githubusercontent.com/theblu3j/rate-all/refs/heads/main/rate-all.sh")
sha512sums=('2a026cb53c711841e36cc1adc36981574a8872da7b21ab234c793be709431221b33bc70795dffb0d5e8bcb8c2adf2dd3486f6539b16079c07602f85ef3a721b8')

package() {
    mkdir -p "$pkgdir/usr/bin/"
    install -Dm644 "$srcdir/rate-all.sh" "$pkgdir/usr/bin/rate-all"
    chmod +x "$pkgdir/usr/bin/rate-all"
}
