pkgname=ttf-monocraft-nerd
pkgver=4.1
pkgrel=1
pkgdesc="A monospaced programming font inspired by the Minecraft typeface"
url="https://github.com/IdreesInc/Monocraft"
license=(OFL-1.1-RFN)
arch=(any)
provides=('ttf-font-nerd')
groups=('nerd-fonts')
source=("$url/releases/download/v$pkgver/Monocraft-nerd-fonts-patched.ttc")

sha512sums=('3357c235d67b530b9b30c1c141368a19dbacb500548da17670692b1abfd434bacc4faa8c378a16c34dcc4dd17e9b478962322860269a2f0e07d4e969c9fe5815')

package() {
  install -Dm644 -t "$pkgdir/usr/share/fonts/Monocraft" Monocraft*.tt[cf]
}
